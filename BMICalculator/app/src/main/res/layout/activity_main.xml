<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/str_images_content"
    android:paddingTop="@dimen/padding_16dp"
    tools:context=".MainActivity">

    <EditText

        android:id="@+id/weight_edit_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:hint="@string/str_weigh"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingLeft="@dimen/padding_32dp"
        android:paddingRight="@dimen/padding_32dp"
        tools:text="@string/str_weigh" />

    <EditText
        android:id="@+id/height_edit_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight_edit_input"
        android:layout_centerHorizontal="true"
        android:autofillHints="Height in M"
        android:hint="@string/str_height"
        android:inputType="numberDecimal"
        android:paddingLeft="@dimen/padding_32dp"
        android:paddingRight="@dimen/padding_32dp"
        tools:text="@string/str_height" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/height_edit_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_8dp"
        android:paddingLeft="@dimen/padding_32dp"
        android:paddingRight="@dimen/padding_32dp"
        android:text="@string/str_calculate"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/final_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculate_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/str_32sp"
        tools:text="@string/str_height" />

    <ImageView
        android:id="@+id/image_for_BMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/final_result_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_8dp"
        android:contentDescription="@string/str_images_content"
        tools:srcCompat="@drawable/ic_healthy" />


</RelativeLayout>